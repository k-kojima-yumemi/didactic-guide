{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    ":prConcurrentLimit10",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
    ":automergeMinor"
  ],
  "packageRules": [
    {
      "groupName": "GitHub Actions",
      "groupSlug": "gh-actions",
      "matchManagers": [
        "github-actions"
      ]
    }
  ]
}
